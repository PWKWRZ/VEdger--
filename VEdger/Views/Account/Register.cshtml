@model VEdger.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<head>
    <link href="~/Style-Register.css" rel="stylesheet" />
</head>


<body>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="registerbox">
            <img src="~/BgImage/Logo.png" alt="Alternate Text" class="user" />
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "emailplace" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "txtemail" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "passplace" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "txtpass" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "confirmplace" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "txtpass" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btnsubmit" value="Register" />
            </div>
        </div>
        <p>
            @Html.ActionLink("Log in", "Login")
        </p>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
